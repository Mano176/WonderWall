<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="WonderWall.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:WonderWall"
       xmlns:pages="clr-namespace:WonderWall.Pages"
       x:DataType="local:AppShell"
       Title="WonderWall">

    <OnIdiom x:TypeArguments="ShellItem">
        <OnIdiom.Phone>
            <TabBar>
                <ShellContent Title="Current"
                              ContentTemplate="{DataTemplate pages:CurrentWallpaperPage}" />
                <ShellContent Title="Search Terms"
                              ContentTemplate="{DataTemplate pages:GroupsPage}" />
                <ShellContent Title="Settings"
                              ContentTemplate="{DataTemplate pages:SettingsPage}" />
            </TabBar>
        </OnIdiom.Phone>

        <OnIdiom.Desktop>
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </OnIdiom.Desktop>
    </OnIdiom>

</Shell>
