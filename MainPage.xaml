<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WonderWall"
             xmlns:views="clr-namespace:WonderWall.Views"
             x:Class="WonderWall.MainPage"
             x:DataType="local:MainPage">

    <Grid ColumnDefinitions="*, 1, *"
          RowDefinitions="Auto, 1, *">

        <views:GroupsView Grid.Row="0"
                          Grid.Column="0"
                          Grid.RowSpan="3" />

        <BoxView Grid.Row="0"
                 Grid.Column="1"
                 Grid.RowSpan="3"
                 Color="Gray" />

        <views:SettingsView Grid.Row="0"
                            Grid.Column="2" />

        <BoxView Grid.Row="1"
                 Grid.Column="2"
                 Color="Gray" />

        <views:CurrentWallpaperView Grid.Row="2"
                                    Grid.Column="2" />

    </Grid>

</ContentPage>
