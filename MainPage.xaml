<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WonderWall"
             xmlns:views="clr-namespace:WonderWall.Views"
             x:Class="WonderWall.MainPage"
             x:DataType="local:MainPage">

    <Grid ColumnDefinitions="*, 1, *"
          RowDefinitions="Auto, Auto, 1, Auto, *">

        <Label Grid.Row="0"
               Grid.Column="0"
               Text="Search Terms"
               FontSize="Large"
               Margin="10" />

        <ContentView Grid.Row="1"
                     Grid.Column="0"
                     Grid.RowSpan="4"
                     Padding="5"
                     x:Name="groupsContentView" />

        <BoxView Grid.Row="0"
                 Grid.Column="1"
                 Grid.RowSpan="5"
                 Color="Gray" />

        <Label Grid.Row="0"
               Grid.Column="2"
               Text="Settings"
               FontSize="Large"
               Margin="10" />

        <ContentView Grid.Row="1"
                     Grid.Column="2"
                     Padding="5"
                     x:Name="settingsContentView" />

        <BoxView Grid.Row="2"
                 Grid.Column="2"
                 Color="Gray" />

        <Label Grid.Row="3"
               Grid.Column="2"
               Text="Current Wallpaper"
               FontSize="Large"
               Margin="10" />

        <ContentView Grid.Row="4"
                     Grid.Column="2"
                     Padding="5"
                     x:Name="currentWallpaperContentView" />

    </Grid>

</ContentPage>
