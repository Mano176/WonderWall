<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:WonderWall.ViewModels"
             xmlns:behaviors="clr-namespace:WonderWall.Behaviors"
             xmlns:local="clr-namespace:WonderWall"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:converter="clr-namespace:WonderWall.Converter"
             x:Class="WonderWall.Views.GroupsView"
             x:DataType="viewmodels:GroupsViewModel">

    <ContentView.Resources>
        <ResourceDictionary>
            <toolkit:VariableMultiValueConverter x:Key="AndMultiConverter"
                                                 ConditionType="All"
                                                 Count="2" />
            <converter:MultiParamConverter x:Key="MultiParamConverter" />
        </ResourceDictionary>
    </ContentView.Resources>

    <CollectionView ItemsSource="{Binding Groups}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="viewmodels:GroupViewModel">
                <VerticalStackLayout Padding="0, 2.5, 0, 2.5">

                    <HorizontalStackLayout HorizontalOptions="Fill"
                                           Spacing="6">

                        <HorizontalStackLayout.Triggers>
                            <DataTrigger TargetType="HorizontalStackLayout"
                                         Binding="{Binding IsHovered}"
                                         Value="True">
                                <Setter Property="BackgroundColor"
                                        Value="#3CFFFFFF" />
                            </DataTrigger>
                        </HorizontalStackLayout.Triggers>

                        <HorizontalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SelectGroupCommand, Source={RelativeSource AncestorType={x:Type viewmodels:GroupsViewModel}}}"
                                                  CommandParameter="{Binding .}" />
                            <PointerGestureRecognizer PointerEnteredCommand="{Binding PointerEnteredGroupCommand, Source={RelativeSource AncestorType={x:Type viewmodels:GroupsViewModel}}}"
                                                      PointerEnteredCommandParameter="{Binding .}"
                                                      PointerExitedCommand="{Binding PointerExitedGroupCommand, Source={RelativeSource AncestorType={x:Type viewmodels:GroupsViewModel}}}"
                                                      PointerExitedCommandParameter="{Binding .}" />
                        </HorizontalStackLayout.GestureRecognizers>

                        <Image>
                            <Image.Source>
                                <FontImageSource Glyph="{x:Static local:MaterialIcons.Keyboard_arrow_right}" />
                            </Image.Source>

                            <Image.Behaviors>
                                <behaviors:RotationAnimationBehavior RotationValue="{Binding IconRotation}" />
                            </Image.Behaviors>
                        </Image>

                        <CheckBox IsChecked="{Binding IsEnabled, Mode=OneWay}"
                                  Command="{Binding ToggleGroupCommand, Source={RelativeSource AncestorType={x:Type viewmodels:GroupsViewModel}}}"
                                  CommandParameter="{Binding .}"
                                  VerticalOptions="Center" />

                        <Label Text="{Binding Title}"
                               VerticalOptions="Center"
                               FontSize="Medium" />

                        <HorizontalStackLayout Spacing="6"
                                               IsVisible="{OnIdiom Phone=True, Default=False}">

                            <HorizontalStackLayout.Triggers>
                                <DataTrigger TargetType="HorizontalStackLayout"
                                             Binding="{Binding IsHovered}"
                                             Value="True">
                                    <Setter Property="IsVisible"
                                            Value="True" />
                                </DataTrigger>
                            </HorizontalStackLayout.Triggers>

                            <ImageButton Command="{Binding EditGroupCommand, Source={RelativeSource AncestorType={x:Type viewmodels:GroupsViewModel}}}"
                                         CommandParameter="{Binding .}">
                                <ImageButton.Source>
                                    <FontImageSource Glyph="{x:Static local:MaterialIcons.Edit}" />
                                </ImageButton.Source>
                            </ImageButton>

                            <ImageButton Command="{Binding DeleteGroupCommand, Source={RelativeSource AncestorType={x:Type viewmodels:GroupsViewModel}}}"
                                         CommandParameter="{Binding .}">
                                <ImageButton.Source>
                                    <FontImageSource Glyph="{x:Static local:MaterialIcons.Delete}" />
                                </ImageButton.Source>
                            </ImageButton>

                            <ImageButton Command="{Binding SetGroupAsWallpaperCommand, Source={RelativeSource AncestorType={x:Type viewmodels:GroupsViewModel}}}"
                                         CommandParameter="{Binding .}">
                                <ImageButton.Source>
                                    <FontImageSource Glyph="{x:Static local:MaterialIcons.Wallpaper}" />
                                </ImageButton.Source>
                            </ImageButton>
                        </HorizontalStackLayout>
                    </HorizontalStackLayout>
                    <Grid RowDefinitions="*"
                          ColumnDefinitions="Auto, *">
                        <BoxView WidthRequest="1"
                                 Color="Gray"
                                 Margin="10, 0, 10, 0"
                                 Grid.Row="0"
                                 Grid.Column="0" />

                        <CollectionView ItemsSource="{Binding SearchTerms}"
                                        IsVisible="{Binding IsOpen}"
                                        Grid.Row="0"
                                        Grid.Column="1">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:SearchTermViewModel">
                                    <HorizontalStackLayout Spacing="6"
                                                           Padding="50, 0, 0, 0">

                                        <HorizontalStackLayout.Triggers>
                                            <DataTrigger TargetType="HorizontalStackLayout"
                                                         Binding="{Binding IsHovered}"
                                                         Value="True">
                                                <Setter Property="BackgroundColor"
                                                        Value="#3CFFFFFF" />
                                            </DataTrigger>
                                        </HorizontalStackLayout.Triggers>

                                        <HorizontalStackLayout.GestureRecognizers>
                                            <PointerGestureRecognizer PointerEnteredCommand="{Binding PointerEnteredSearchTermCommand, Source={RelativeSource AncestorType={x:Type viewmodels:GroupsViewModel}}}"
                                                                      PointerEnteredCommandParameter="{Binding .}"
                                                                      PointerExitedCommand="{Binding PointerExitedSearchTermCommand, Source={RelativeSource AncestorType={x:Type viewmodels:GroupsViewModel}}}"
                                                                      PointerExitedCommandParameter="{Binding .}" />
                                        </HorizontalStackLayout.GestureRecognizers>

                                        <CheckBox IsChecked="{Binding IsEnabled, Mode=OneWay}"
                                                  IsEnabled="{Binding IsEnabled, Source={RelativeSource AncestorType={x:Type viewmodels:GroupViewModel}}}"
                                                  Command="{Binding ToggleSearchTermCommand, Source={RelativeSource AncestorType={x:Type viewmodels:GroupsViewModel}}}"
                                                  CommandParameter="{Binding .}" />

                                        <Label FontSize="Small"
                                               VerticalOptions="Center"
                                               Text="{Binding Title}" />

                                        <HorizontalStackLayout Spacing="6"
                                                               IsVisible="{OnIdiom Phone=True, Default=False}">
                                            <HorizontalStackLayout.Triggers>
                                                <DataTrigger TargetType="HorizontalStackLayout"
                                                             Binding="{Binding IsHovered}"
                                                             Value="True">
                                                    <Setter Property="IsVisible"
                                                            Value="True" />
                                                </DataTrigger>
                                            </HorizontalStackLayout.Triggers>

                                            <ImageButton Command="{Binding EditSearchTermCommand, Source={RelativeSource AncestorType={x:Type viewmodels:GroupsViewModel}}}"
                                                         CommandParameter="{Binding .}">
                                                <ImageButton.Source>
                                                    <FontImageSource Glyph="{x:Static local:MaterialIcons.Edit}" />
                                                </ImageButton.Source>
                                            </ImageButton>

                                            <ImageButton Command="{Binding DeleteSearchTermCommand, Source={RelativeSource AncestorType={x:Type viewmodels:GroupsViewModel}}}">
                                                <ImageButton.CommandParameter>
                                                    <MultiBinding Converter="{StaticResource MultiParamConverter}">
                                                        <Binding Path="."
                                                                 Source="{RelativeSource AncestorType={x:Type viewmodels:GroupViewModel}}" />
                                                        <Binding Path="." />
                                                    </MultiBinding>
                                                </ImageButton.CommandParameter>

                                                <ImageButton.Source>
                                                    <FontImageSource Glyph="{x:Static local:MaterialIcons.Delete}" />
                                                </ImageButton.Source>
                                            </ImageButton>

                                            <ImageButton Command="{Binding SetSearchTermAsWallpaperCommand, Source={RelativeSource AncestorType={x:Type viewmodels:GroupsViewModel}}}"
                                                         CommandParameter="{Binding .}">

                                                <ImageButton.Source>
                                                    <FontImageSource Glyph="{x:Static local:MaterialIcons.Wallpaper}" />
                                                </ImageButton.Source>
                                            </ImageButton>
                                        </HorizontalStackLayout>
                                    </HorizontalStackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>

                            <CollectionView.Footer>
                                <Button Text="Add Search Term"
                                        Margin="5, 10, 5, 5"
                                        FontSize="13"
                                        Padding="5,7"
                                        WidthRequest="150"
                                        HorizontalOptions="Start"
                                        Command="{Binding AddSearchTermCommand, Source={RelativeSource AncestorType={x:Type viewmodels:GroupsViewModel}}}"
                                        CommandParameter="{Binding .}" />
                            </CollectionView.Footer>
                        </CollectionView>
                    </Grid>
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>

        <CollectionView.Footer>
            <Button Text="Add Group"
                    Margin="10"
                    Command="{Binding AddGroupCommand}" />
        </CollectionView.Footer>
    </CollectionView>
</ContentView>
