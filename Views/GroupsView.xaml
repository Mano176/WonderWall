<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:WonderWall.ViewModels"
             xmlns:behaviors="clr-namespace:WonderWall.Behaviors"
             xmlns:local="clr-namespace:WonderWall"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="WonderWall.Views.GroupsView"
             x:DataType="viewmodels:GroupsViewModel">

    <ContentView.Resources>
        <ResourceDictionary>
            <toolkit:VariableMultiValueConverter x:Key="AndMultiConverter"
                                                 ConditionType="All"
                                                 Count="2" />
        </ResourceDictionary>
    </ContentView.Resources>

    <CollectionView ItemsSource="{Binding Groups}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="viewmodels:GroupViewModel">
                <VerticalStackLayout Padding="0, 2.5, 0, 2.5">

                    <HorizontalStackLayout HorizontalOptions="Fill"
                                           Spacing="6">
                        <HorizontalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SelectGroupCommand, Source={RelativeSource AncestorType={x:Type viewmodels:GroupsViewModel}}}"
                                                  CommandParameter="{Binding .}" />
                        </HorizontalStackLayout.GestureRecognizers>

                        <Image>
                            <Image.Source>
                                <FontImageSource Glyph="{x:Static local:MaterialIcons.Keyboard_arrow_right}" />
                            </Image.Source>

                            <Image.Behaviors>
                                <behaviors:RotationAnimationBehavior RotationValue="{Binding IconRotation}" />
                            </Image.Behaviors>
                        </Image>

                        <CheckBox IsChecked="{Binding IsEnabled, Mode=OneWay}"
                                  Command="{Binding ToggleGroupCommand, Source={RelativeSource AncestorType={x:Type viewmodels:GroupsViewModel}}}"
                                  CommandParameter="{Binding .}"
                                  VerticalOptions="Center" />

                        <Label Text="{Binding Title}"
                               VerticalOptions="Center"
                               FontSize="Medium" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <BoxView WidthRequest="1"
                                 Color="Gray"
                                 Margin="10, 0, 10, 0"/>

                        <CollectionView ItemsSource="{Binding SearchTerms}"
                                        IsVisible="{Binding IsOpen}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:SearchTermViewModel">
                                    <HorizontalStackLayout Spacing="6"
                                                           Padding="50, 0, 0, 0">
                                        <CheckBox IsChecked="{Binding IsEnabled, Mode=OneWay}"
                                                  IsEnabled="{Binding IsEnabled, Source={RelativeSource AncestorType={x:Type viewmodels:GroupViewModel}}}"
                                                  Command="{Binding ToggleSearchTermCommand, Source={RelativeSource AncestorType={x:Type viewmodels:GroupsViewModel}}}"
                                                  CommandParameter="{Binding .}" />

                                        <Label FontSize="Small"
                                               VerticalOptions="Center"
                                               Text="{Binding Title}" />
                                    </HorizontalStackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>

                            <CollectionView.Footer>
                                <Button Text="Add Search Term"
                                        Margin="5, 10, 5, 5"
                                        FontSize="13"
                                        Padding="5,7"
                                        WidthRequest="150"
                                        HorizontalOptions="Start"
                                        Command="{Binding AddSearchTermCommand, Source={RelativeSource AncestorType={x:Type viewmodels:GroupsViewModel}}}"
                                        CommandParameter="{Binding .}" />
                            </CollectionView.Footer>
                        </CollectionView>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>

        <CollectionView.Footer>
            <Button Text="Add Group"
                    Margin="10"
                    Command="{Binding AddGroupCommand}" />
        </CollectionView.Footer>
    </CollectionView>
</ContentView>
