<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:WonderWall.ViewModels"
             xmlns:behaviors="clr-namespace:WonderWall.Behaviors"
             xmlns:local="clr-namespace:WonderWall"
             x:Class="WonderWall.Views.GroupsView"
             x:DataType="viewmodels:GroupsViewModel">
    <CollectionView ItemsSource="{Binding Groups}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="viewmodels:GroupViewModel">
                <VerticalStackLayout Padding="0, 2.5, 0, 2.5">

                    <HorizontalStackLayout HorizontalOptions="Fill">
                        <HorizontalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SelectGroupCommand, Source={RelativeSource AncestorType={x:Type viewmodels:GroupsViewModel}}}"
                                                  CommandParameter="{Binding .}" />
                        </HorizontalStackLayout.GestureRecognizers>

                        <Image>
                            <Image.Source>
                                <FontImageSource Glyph="{x:Static local:MaterialIcons.Keyboard_arrow_right}" />
                            </Image.Source>

                            <Image.Behaviors>
                                <behaviors:RotationAnimationBehavior RotationValue="{Binding IconRotation}" />
                            </Image.Behaviors>
                        </Image>

                        <Label Text="{Binding Title}"
                               VerticalOptions="Center"
                               FontSize="Medium"
                               Margin="5, 0, 0, 0"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <BoxView WidthRequest="1"
                                 Color="Gray"
                                 Margin="10, 0, 10, 0"/>

                        <CollectionView ItemsSource="{Binding SearchTerms}"
                                        IsVisible="{Binding IsOpen}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:SearchTermViewModel">
                                    <Label FontSize="Small">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="â€¢ " />
                                                <Span Text="{Binding Title}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>

                            <CollectionView.Footer>
                                <Button Text="Add Search Term"
                                        Margin="5, 10, 5, 5"
                                        FontSize="13"
                                        Padding="5,7"
                                        WidthRequest="150"
                                        HorizontalOptions="Start"
                                        Command="{Binding AddSearchTermCommand, Source={RelativeSource AncestorType={x:Type viewmodels:GroupsViewModel}}}"
                                        CommandParameter="{Binding .}" />
                            </CollectionView.Footer>
                        </CollectionView>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>

        <CollectionView.Footer>
            <Button Text="Add Group"
                    Margin="10"
                    Command="{Binding AddGroupCommand}" />
        </CollectionView.Footer>
    </CollectionView>
</ContentView>
